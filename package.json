{
  "name": "lancehawks-projectmanagement-backend",
  "version": "1.0.0",
  "description": "OTP-based authentication backend with PostgreSQL",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "clean": "rm -rf node_modules package-lock.json",
    "setup": "npm install && npm run generate-secrets",
    "generate-secrets": "node -e \"console.log('JWT_ACCESS_SECRET=' + require('crypto').randomBytes(32).toString('hex')); console.log('JWT_REFRESH_SECRET=' + require('crypto').randomBytes(32).toString('hex'));\"",
    "check-env": "node -e \"require('dotenv').config(); console.log('âœ… Environment loaded:', Object.keys(process.env).filter(k => k.startsWith('DB_') || k.startsWith('JWT_') || k.startsWith('EMAIL_')));\"",
    "db-health": "curl -s http://localhost:5000/api/v1/health/database || echo 'Server not running'",
    "vercel-build": "echo 'Build complete'",
    "deploy": "vercel --prod"
  },
  "keywords": ["authentication", "otp", "jwt", "nodejs", "postgresql", "express", "vercel"],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "nodemailer": "^6.9.7",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^11.11.1",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0"
  }
}